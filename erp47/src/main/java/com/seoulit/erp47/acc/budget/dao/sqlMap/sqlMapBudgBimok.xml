	<cache flushInterval="86400000" eviction="LRU" />
	
	<resultMap type="BudgBimokBean" id="BudgBimok">
		<result column="bimokCd" property="bimokCd"/>			 	<!-- 예산비목코드 -->
		<result column="bimokNm" property="bimokNm"/>			 	<!-- 예산비목명칭 -->
		<result column="accYear" property="accYear"/>				<!-- 회계연도 -->
